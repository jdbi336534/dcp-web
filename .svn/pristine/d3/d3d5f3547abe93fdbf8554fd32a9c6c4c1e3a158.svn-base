.datasource-topbox {
    width: 100%;
    height: 8%;
    font-size: 14px;
    position: absolute;
    top: -8.4%;
    .search-box {
        position: absolute;
        width: 26%;
        height: 70%;
        background: url("../../assets/img/data/import/search.png") no-repeat center;
        background-size: auto 100%;
        left: 62%;
        top: 15%;
        &>input {
            height: 100%;
            width: 80%;
            margin-left: 20%;
            display: inherit;
            border: none;
            background: none;
            padding: 0;
            outline: none;
            color: rgba(36, 202, 243, 1);
            font-size: 12px;
        }
        &>input:-moz-placeholder {
            /* Mozilla Firefox 4 to 18 */
            color: rgba(36, 202, 243, 0.5);
        }
        &>input::-moz-placeholder {
            /* Mozilla Firefox 19+ */
            color: rgba(36, 202, 243, 0.5);
        }
        &>input:-ms-input-placeholder,
        textarea:-ms-input-placeholder {
            color: rgba(36, 202, 243, 0.5);
        }
        &>input::-webkit-input-placeholder,
        textarea::-webkit-input-placeholder {
            color: rgba(36, 202, 243, 0.5);
        }
    }
}
