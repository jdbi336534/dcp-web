<script>
import DcpDialog from '@/components/common/DCPDialog'
import {
    getDataSourceInfo,
    showDBInfoOrFile,
    checkDataSource
} from '../../assets/js/queryData';
import {
    formatTime,
    getUserId
} from '../../assets/js/mUtils';
export default {
    data() {
            return {
                title: '',
                activeName: 'first',
                detailsData: {
                    businessSysName: '暂无数据',
                    deploymentAddressName: '暂无数据',
                    dataBaseType: '暂无数据',
                    historyDataSize: '暂无数据',
                    protocol: '暂无数据',
                    dataSourceName: '暂无数据',
                    dataSourceKindName: '暂无数据',
                    vestInOrganiztionName: '暂无数据',
                    dataSourceShortName: '暂无数据',
                    physicalAddress: '暂无数据',
                    dataBastDevelopers: '暂无数据',
                    dataSourceTypeName: '暂无数据',
                    dataSourceStatusName: '暂无数据',
                    linkString: '暂无数据',
                    dataSourceOwnerName: '暂无数据',
                    ipAddress: '暂无数据',
                    port: '暂无数据',
                    dataBaseVersion: '暂无数据',
                    username: '暂无数据',
                    equipmentModel: '暂无数据',
                    hardwareConfiguration: '暂无数据',
                    os: '暂无数据',
                    osBit: '暂无数据',
                    createTime: '暂无数据',
                    creatorName: '暂无数据',
                    aproveStatusName: '暂无数据',
                    dataSourceRetentionCycle: '暂无数据',
                    dataSourceGrowthRate: '暂无数据',
                },
                defaultProps: {
                    children: 'children',
                    label: 'label'
                },
                treeData: [],
                tableData: [],
                tableloading: false,
                row: null,
                dataType: 'db',
                textarea: '',
                userId: null,
                dataSourceId: null,
            }
        },
        props: {},
        components: {
            DcpDialog
        },
        created() {
            this.userId = getUserId();
        },
        mounted() {},
        methods: {
            tableRowClassName(row) {
                if (row.selected === 2) {
                    return 'info-row';
                }
            },
            formatTime(t) {
                return formatTime(t);
            },
            handleNodeClick(data, node, self) {
                let {
                    columns,
                    children
                } = data;
                if (node.level === 1) {
                    for (let i = 0, length = children.length; i < length; i++) {
                        if (children[i].selected === 2) {
                            $($(self)[0].$children[i + 1].$el).css('color', 'red');
                        }
                    }
                }
                this.tableData = columns;
            },
            open(data, taskId) {
                this.dataType = data.dataSourceKind;
                this.taskId = taskId;
                this.dataSourceId = data.dataSourceId;
                getDataSourceInfo(data).then(res => {
                    let {
                        code,
                        data,
                        msg
                    } = res;
                    if (code === 200) {
                        this.detailsData = data;
                    } else {
                        this.$message.error(msg);
                    }
                });
                this.$refs.data_review_dialog.open()
            },
            close() {
                this.title = '';
                this.activeName = 'first';
                this.detailsData = {
                    businessSysName: '暂无数据',
                    deploymentAddressName: '暂无数据',
                    dataBaseType: '暂无数据',
                    historyDataSize: '暂无数据',
                    protocol: '暂无数据',
                    dataSourceName: '暂无数据',
                    dataSourceKindName: '暂无数据',
                    vestInOrganiztionName: '暂无数据',
                    dataSourceShortName: '暂无数据',
                    physicalAddress: '暂无数据',
                    dataBastDevelopers: '暂无数据',
                    dataSourceTypeName: '暂无数据',
                    dataSourceStatusName: '暂无数据',
                    linkString: '暂无数据',
                    dataSourceOwnerName: '暂无数据',
                    ipAddress: '暂无数据',
                    port: '暂无数据',
                    dataBaseVersion: '暂无数据',
                    username: '暂无数据',
                    equipmentModel: '暂无数据',
                    hardwareConfiguration: '暂无数据',
                    os: '暂无数据',
                    osBit: '暂无数据',
                    createTime: '暂无数据',
                    creatorName: '暂无数据',
                    aproveStatusName: '暂无数据',
                    dataSourceRetentionCycle: '暂无数据',
                    dataSourceGrowthRate: '暂无数据',
                };
                this.defaultProps = {
                    children: 'children',
                    label: 'label'
                };
                this.treeData = [];
                this.tableData = [];
                this.tableloading = false;
                this.condition = null;
                this.dataType = 'db';
                this.$refs.data_review_dialog.close();
                this.refresh();
            },
            handleCheck(status) {
                let obj = {
                    dataSourceKind: this.dataType,
                    dataSourceId: this.dataSourceId,
                    taskId: this.taskId,
                    aproveStatus: status,
                    aproveMessage: this.textarea || '无',
                    userId: this.userId
                };
                checkDataSource(obj).then(res => {
                    let {
                        code,
                        msg
                    } = res;
                    if (code === 200) {
                        this.$message({
                            type: 'success',
                            message: msg
                        });
                    } else {
                        this.$message.error(msg);
                    }
                    this.close();
                });
            },
            handleClick() {
                if (this.activeName === 'second') {
                    let {
                        dataSourceId,
                        dataSourceKind,
                        ipAddress,
                        port,
                        username,
                        password,
                        dataBaseType,
                        dataBaseName
                    } = this.detailsData;
                    showDBInfoOrFile({
                        dataSourceId,
                        dataSourceKind,
                        ipAddress,
                        port,
                        username,
                        password,
                        dataBaseType,
                        dataBaseName
                    }).then(res => {
                        let {
                            code,
                            data,
                            msg
                        } = res;
                        if (code === 200) {
                            if (this.dataType === 'db') {
                                let {
                                    tables,
                                    schemaName
                                } = data[0];
                                for (let item of tables) {
                                    item.label = item.tableName;
                                }
                                this.treeData = [{
                                    label: schemaName,
                                    children: tables,
                                    columns: []
                                }];
                            } else if (this.dataType === 'file') {
                                this.tableData = data;
                            }
                        } else {
                            this.$message.error(msg);
                        }
                    });
                }
            },
            refresh() {
                this.$emit('on-refresh');
            }
        }
}
</script>
